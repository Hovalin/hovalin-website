    {{! Styles'n'Scripts }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/input.css"}}" />

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}} nav-closed">

  <!-- CUSTOM HOVALIN NAV FOR NON MOBILE DISPLAYS-->
