{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}

<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <nav class="main-nav {{#if image}}overlay{{/if}} clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
        {{/if}}
    </nav>
</header>

<main class="content" role="main">
    <article class="">
      <div class="black-bg">
        <div id="docs-hero">
          <h1>Buy</h1>
        </div><!--/hero -->
      </div>
    </article>
</main>

<div id="shopping-items">
  <div class="row">
    <div id="kit" class="col-sm-6 item">
      <h1>DIY Hovalin Kit</h1>
      <p>Everything you need to put a hovalin together.</p>
      <button class="buy-it">BUY</button>
    </div>
    <div id="fully-assembled-hovalin" class="col-sm-6 item">
      <h1>The Fully Assembled Hovalin</h1>
      <p>Start playing now with no assembly required.</p>
      <button class="buy-it">BUY</button>
    </div>
  </div>
</div>
{{/post}}
